.First.lib <- function (lib, pkg) {
	library.dynam("RScaLAPACK", pkg, lib)
	if (system("mpdtrace") != 0) {
	  if (interactive()) {
		print("The MPICH2 MPD daemon does not appear to be running.", quote=FALSE)
		print("Please use the mpdboot command to start the daemon.", quote=FALSE)
		print("(From inside R, use the command 'system(\"mpdboot\")')", quote=FALSE)
	  } else {
	    system("mpdboot -H", FALSE, TRUE)
		}
	}
}

.Last.lib <- function(libpath){
	library.dynam.unload("RScaLAPACK", libpath)
}

